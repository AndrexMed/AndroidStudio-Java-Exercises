<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentCar"
    android:orientation="vertical"
    android:background="@drawable/fondo">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rent a Car"
        android:textSize="35dp"
        android:textColor="#FFFB73"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:fontFamily="@font/montserratblack"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratblack"
            android:background="@drawable/edt_style"/>

        <TextView
            android:id="@+id/tvBrandAndName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/montserratblack"
            android:text="cuando selecione la placa que se muestre la marca + el nombre" />

        <TextView
            android:id="@+id/tvValueDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/montserratblack"
            android:text="cuando selecione la placa que se muestre el valor del dia" />

        <EditText
            android:id="@+id/etDate1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/edt_style"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserratblack"
            android:hint="Initial Date" />

        <EditText
            android:id="@+id/etDate2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:background="@drawable/edt_style"
            android:layout_gravity="center"
            android:fontFamily="@font/montserratblack"
            android:hint="Final Date" />

        <TextView
            android:id="@+id/tvNumberRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/montserratblack"
            android:text="aqui se mostrara el numero de la renta cuando lo alquile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btRentCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent"
            android:fontFamily="@font/montserratblack"
            android:text="Rent" />

        <Button
            android:id="@+id/btVehicleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserratblack"
            android:text="Vehicles list" />

        <Button
            android:id="@+id/btSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserratblack"
            android:backgroundTint="@color/transparent"
            android:text="Sign Out" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/rent_a_car" />

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:text="All rights reserved"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserratblack"
        android:gravity="center"
        android:drawableRight="@drawable/baseline_copyright_24"/>

</LinearLayout>