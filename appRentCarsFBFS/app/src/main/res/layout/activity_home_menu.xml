<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeMenu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvUserMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="User Menu"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnRentCar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Rent a car" />

        <Button
            android:id="@+id/btnCarsAvailables"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cars available " />

        <Button
            android:id="@+id/btnDevolver"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Return car" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/AdminMenu"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tvAdminMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Admin Menu"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnRegisterCar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Car Register" />

        <Button
            android:id="@+id/btnCarsRented"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Cars rented" />

    </LinearLayout>


</LinearLayout>