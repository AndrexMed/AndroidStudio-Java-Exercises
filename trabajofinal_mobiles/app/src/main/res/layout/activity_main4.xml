<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/MiEstilo">

        <EditText
            android:id="@+id/etCantidadAgua"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:hint="Cantidad (m³) : Agua"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etValorAgua"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="Valor por m³ : Agua"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/MiEstilo">

        <EditText
            android:id="@+id/etCantidadEnergia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Cantidad (kWh) : Energia"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etValorEnergia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Costo por kWh : Energia"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <EditText
        android:id="@+id/etEstrato"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Ingrese Estrato 0 - 6"
        android:textColorHint="@color/black"
        style="@style/MiEstilo"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/MiEstilo">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/MiEstilo"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Agua"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvTotalAgua"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="0"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/MiEstilo"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Energia"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvTotalEnergia"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="0"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/MiEstilo"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subsidio"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvTotalSubsidio"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="0"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/MiEstilo"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Neto"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTotalNeto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="0"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            style="@style/MiEstilo">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Calcular"
                android:layout_margin="5dp"
                android:onClick="CalcularServicios"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Limpiar"
                android:layout_margin="5dp"
                android:onClick="LimpiarServicios"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="Regresar"
                android:layout_margin="5dp"
                android:onClick="RegresarServicios"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>